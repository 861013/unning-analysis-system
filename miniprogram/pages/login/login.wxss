/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.login-type {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.type-item {
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  color: #999;
  background: #f5f5f5;
}

.type-item.active {
  background: #667eea;
  color: #fff;
}

.form {
  margin-bottom: 40rpx;
}

.input {
  width: 100%;
  padding: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.btn-primary {
  width: 100%;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.footer {
  text-align: center;
  color: #667eea;
  font-size: 28rpx;
}

